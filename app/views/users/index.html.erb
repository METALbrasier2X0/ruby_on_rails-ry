<style>
 .head{
      background-color: #c41e3d;
      text-align: center;
      padding: 20px 0px;
      color: white;
    }

    ul{
      box-shadow: 0px 0px 5px  #c41e3d;
      text-align: center;
      margin-left:auto;
      margin-right:auto;
      width: 400px;
      height: 100%;
      border-radius: 5px;
      background-color: white;
    }

    h3{
        margin-top: 30px;
        margin-left:30px;
    }
</style>

<div class="head">
<h1> le Blog </h1>
</div>
<h3>Last posts:</h3>
<ul>
    <% if @posts == nil %>
        <h1> Pas de posts</h1>
    <% else %>
        <% @posts.each do |post| %>
            <div class="row12 user"> <li>
              <% if post.image? %>
                <img src="<%= post.image.thumb %> " alt="<%= post.title %>"/>
                <% end %> 
                <%= link_to [@user,post] do %> <%= post.title %>
              <% end %></li>
            </div>
        <% end %>

    <% end %>
</ul>
